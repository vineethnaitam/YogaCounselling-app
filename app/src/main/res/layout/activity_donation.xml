<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".donation">

    <ImageView
        android:layout_width="101dp"
        android:layout_height="95dp"
        android:src="@drawable/icondd"
        android:layout_marginStart="145dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="160dp"
        android:text="Want To Share Food? "
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/note1"
        android:layout_width="274dp"
        android:layout_height="29dp"
        android:layout_below="@+id/note"
        android:layout_marginStart="130dp"
        android:layout_marginTop="2dp"
        android:text="Choose any one"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/note2"
        android:layout_width="120dp"
        android:layout_height="124dp"
        android:src="@drawable/icond"
        android:layout_below="@id/note1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"/>

    <Button
        android:id="@+id/note3"
        android:layout_width="130dp"
        android:layout_height="58dp"
        android:layout_below="@+id/note2"
        android:text="Donate"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/black"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="124dp"
        android:src="@drawable/ngo"
        android:layout_below="@+id/note1"
        android:layout_marginTop="50dp"
        android:layout_marginStart="230dp"/>

    <Button
        android:id="@+id/note4"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:text="NGO Agent"
        android:backgroundTint="@color/black"
        android:layout_below="@id/note2"
        android:layout_marginStart="230dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="168dp"
        android:layout_height="183dp"
        android:layout_below="@id/note4"
        android:layout_marginStart="110dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/foodicon" />


</RelativeLayout>