<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DIET">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/die"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:src="@drawable/diet1"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Athlete Diet"
            android:layout_below="@id/die"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"/>

        <ImageView
            android:id="@+id/die1"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:layout_below="@id/button"
            android:layout_marginTop="3dp"
            android:src="@drawable/diet2" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Gain Diet"
            android:layout_below="@id/die1"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"/>

        <ImageView
            android:id="@+id/die2"
            android:layout_width="291dp"
            android:layout_height="152dp"
            android:layout_below="@id/button1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/diet3" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEIGHT LOSS DIET"
            android:layout_below="@id/die2"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"/>
    </RelativeLayout>



</ScrollView>